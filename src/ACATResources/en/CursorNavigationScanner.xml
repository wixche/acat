<?xml version="1.0" ?>
<!DOCTYPE ACAT [
  <!ENTITY usebold "false">
  <!ENTITY buttonFontName "Arial">
]>

<ACAT>
  <WidgetAttributes>
    <WidgetAttribute name="B1" label="&#x75;" value="@CmdGoBack" fontname="ACAT Icon" fontsize="20" bold="&usebold;" />
    <WidgetAttribute name="B2" label="4" value="@CmdCut"  fontname="ACAT Icon" fontsize="22" bold="&usebold;" />
    <WidgetAttribute name="B3" label="5" value="@CmdCopy"  fontname="ACAT Icon" fontsize="22" bold="&usebold;" />
    <WidgetAttribute name="B4" label="6" value="@CmdPaste"  fontname="ACAT Icon" fontsize="22" bold="&usebold;" />
    <WidgetAttribute name="B5" label="&#x118;" value="@CmdShiftKey"  fontname="ACAT Icon" fontsize="22" bold="&usebold;"  />
    <WidgetAttribute name="B6" label="&#x60;" value="@Escape" virtualkey="true" fontname="ACAT Alpha" fontsize="24" bold="&usebold;" />

    <WidgetAttribute name="B7" label="&#xA7;" value="@CmdPrevChar" fontname="ACAT Icon" fontsize="20" bold="&usebold;"  />
    <WidgetAttribute name="B8" label="&#xA8;" value="@CmdNextChar" fontname="ACAT Icon" fontsize="20" bold="&usebold;"  />
    <WidgetAttribute name="B9" label="&#xA6;" value="@CmdPrevLine" fontname="ACAT Icon" fontsize="20" bold="&usebold;"  />
    <WidgetAttribute name="B10" label="&#xA5;" value="@CmdNextLine" fontname="ACAT Icon" fontsize="20"  bold="&usebold;" />
    <WidgetAttribute name="B11" label="u" value="@CmdCtrlKey" fontname="ACAT Alpha" fontsize="26" bold="&usebold;" />
    <WidgetAttribute name="B12" label="s" value="@CmdDeleteNextChar" fontname="ACAT Alpha" fontsize="24"  bold="&usebold;" />

    <WidgetAttribute name="B13" label="&#x32;" value="@CmdPrevWord" fontname="ACAT Alpha" fontsize="20"  bold="&usebold;" />
    <WidgetAttribute name="B14" label="&#x31;" value="@CmdNextWord" fontname="ACAT Alpha" fontsize="20" bold="&usebold;"  />
    <WidgetAttribute name="B15" label="&#x512;" value="@CmdPrevPara"  fontname="ACAT Icon" fontsize="20" bold="&usebold;"  />
    <WidgetAttribute name="B16" label="&#xB6;" value="@CmdNextPara" fontname="ACAT Icon" fontsize="20"  bold="&usebold;" />
    <WidgetAttribute name="B17" label="w" value="@CmdAltKey" fontname="ACAT Alpha" fontsize="26" bold="&usebold;" />
    <WidgetAttribute name="B18" label="d" value="@CmdUndo"  fontname="ACAT Icon" fontsize="20" bold="&usebold;" />
    
    <WidgetAttribute name="B19" label="&#x79;" value="@CmdPrevPage" fontname="ACAT Alpha" fontsize="23"  bold="&usebold;" />
    <WidgetAttribute name="B20" label="&#x7A;" value="@CmdNextPage" fontname="ACAT Alpha" fontsize="23" bold="&usebold;"  />
    <WidgetAttribute name="B21" label="&#x50;" value="@CmdHome" fontname="ACAT Alpha" fontsize="23" bold="&usebold;"  />
    <WidgetAttribute name="B22" label="&#x116;" value="@CmdEnd" fontname="ACAT Alpha" fontsize="23" bold="&usebold;"  />
    <WidgetAttribute name="B23" label="x" value="@Tab" virtualkey="true" fontname="ACAT Alpha" fontsize="24" bold="&usebold;" />
    <WidgetAttribute name="B24" label="m" value="@CmdEnterKey" fontname="ACAT Icon" fontsize="20"  bold="&usebold;" />
  </WidgetAttributes>

  <Layout>
      <Widget class="RowWidget" name="Row1">
        <Widget class="ScannerButton" name="B1"/>
        <Widget class="ScannerButton" name="B2" enabled="contextual"/>
        <Widget class="ScannerButton" name="B3" enabled="contextual"/>
        <Widget class="ScannerButton" name="B4" enabled="contextual"/>
        <Widget class="ScannerButton" name="B5" colorScheme="ColorCodedRegion3"  disabledButtonColorScheme="DisabledColorCodedRegion3"/>
        <Widget class="ScannerButton" name="B6" enabled="contextual" />
      </Widget>

      <Widget class="RowWidget" name="Row2">
        <Widget class="ScannerButton" name="B7" enabled="contextual"  />
        <Widget class="ScannerButton" name="B8" enabled="contextual"  />
        <Widget class="ScannerButton" name="B9" enabled="contextual"  />
        <Widget class="ScannerButton" name="B10" enabled="contextual" />
        <Widget class="ScannerButton" name="B11" colorScheme="ColorCodedRegion3"  disabledButtonColorScheme="DisabledColorCodedRegion3"/>
        <Widget class="ScannerButton" name="B12" enabled="contextual" />
      </Widget>

      <Widget class="RowWidget" name="Row3">
        <Widget class="ScannerButton" name="B13" enabled="contextual"   />
        <Widget class="ScannerButton" name="B14" enabled="contextual"  />
        <Widget class="ScannerButton" name="B15" enabled="contextual"   />
        <Widget class="ScannerButton" name="B16" enabled="contextual"   />
        <Widget class="ScannerButton" name="B17" colorScheme="ColorCodedRegion3"  disabledButtonColorScheme="DisabledColorCodedRegion3"/>
        <Widget class="ScannerButton" name="B18" enabled="contextual"  />
      </Widget>

      <Widget class="RowWidget" name="Row4" >
        <Widget class="ScannerButton" name="B19" enabled="contextual"/>
        <Widget class="ScannerButton" name="B20" enabled="contextual"  />
        <Widget class="ScannerButton" name="B21" enabled="contextual"  />
        <Widget class="ScannerButton" name="B22" enabled="contextual"  />
        <Widget class="ScannerButton" name="B23"/>
        <Widget class="ScannerButton" name="B24" enabled="contextual" />
      </Widget>
  </Layout>

  <Animations>
    <Animation name="TopLevelRotation"
               firstPauseTime="@FirstPauseTime"
               start="true"
               iterations="@GridScanIterations">
      <Widget name="Row1" onSelect="transition(ButtonRotationRow1)"/>
      <Widget name="Row2" onSelect="transition(ButtonRotationRow2)"/>
      <Widget name="Row3" onSelect="transition(ButtonRotationRow3)"/>
      <Widget name="Row4" onSelect="transition(ButtonRotationRow4)"/>
    </Animation>

    <Animation name="ButtonRotationRow1"
               iterations="@ColumnScanIterations"
               firstPauseTime="@FirstPauseTime"
               onEnd="transition(TopLevelRotation)">
      <Widget name="B1" onSelect="actuate(@SelectedWidget)"/>
      <Widget name="B2" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B3" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B4" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B5" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B6" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>

    </Animation>

    <Animation name="ButtonRotationRow2"
               iterations="@ColumnScanIterations"
               firstPauseTime="@FirstPauseTime"
               onEnd="transition(TopLevelRotation)">
      <Widget name="B7" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B8" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B9" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B10" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B11" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B12" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
    </Animation>

    <Animation name="ButtonRotationRow3"
              iterations="@ColumnScanIterations"
              firstPauseTime="@FirstPauseTime"
              onEnd="transition(TopLevelRotation)">
      <Widget name="B13" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B14" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B15" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B16" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B17" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B18" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
    </Animation>

    <Animation name="ButtonRotationRow4"
               iterations="@ColumnScanIterations"
               firstPauseTime="@FirstPauseTime"
               onEnd="transition(TopLevelRotation)">
      <Widget name="B19" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B20" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)"/>
      <Widget name="B21" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B22" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B23" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
      <Widget name="B24" onSelect="actuate(@SelectedWidget);transition(TopLevelRotation)"/>
    </Animation>

    <Animation name="ButtonPressed"
         onEnter=""
         iterations="1"
         onEnd="transition(TopLevelRotation)">
      <Widget name="@SelectedWidget" firstPauseTime="@FirstRepeatTime" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)" />
    </Animation>
  </Animations>
  </ACAT>

