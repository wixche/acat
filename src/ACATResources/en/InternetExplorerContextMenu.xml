<?xml version="1.0" ?>
<!DOCTYPE ACAT [
  <!ENTITY usebold "false">
  <!ENTITY buttonFontName "Arial">
]>

<ACAT>
  <WidgetAttributes>
    <WidgetAttribute name="ContextMenuTitle" label="" value="" fontsize="20" fontname="&buttonFontName;" mouseClickActuate="false" bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon1" label=" " value="@CmdGoBack" fontsize="20" fontname="&buttonFontName;"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText1" label="&#x75;" value="@CmdGoBack" fontsize="18" fontname="ACAT Icon"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon2" label="y" value="@PageUp" fontsize="20" fontname="ACAT Alpha"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText2" label="PageUp" value="@PageUp" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon3" label="z" value="@PageDown" fontsize="20" fontname="ACAT Alpha"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText3" label="PageDown" value="@PageDown" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon4" label="2" value="@IEAddressBar" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText4" label="SearchSlashURL" value="@IEAddressBar" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>
    
    <WidgetAttribute name="ItemIcon5" label="Q" value="@CmdMouseScanner" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText5" label="MouseScanner" value="@CmdMouseScanner" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon6" label="&lt;" value="@IEGoBackward" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText6" label="BrowserBack" value="@IEGoBackward" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon7" label="&gt;" value="@IEGoForward" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText7" label="BrowserFwd" value="@IEGoForward" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon8" label="5" value="@IEBrowserMenu" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText8" label="Browser" value="@IEBrowserMenu" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon9" label="$" value="@IEZoomMenu" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText9" label="Zoom" value="@IEZoomMenu" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon10" label="&#x161;" value="@CmdSnapWindowToggle" fontsize="20" fontname="ACAT Icon"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText10" label="MaxSnap" value="@CmdSnapWindowToggle" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>

    <WidgetAttribute name="ItemIcon11" label="X" value="@CmdCloseWindow" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>
    <WidgetAttribute name="ItemText11" label="Close" value="@CmdCloseWindow" fontsize="18" fontname="&buttonFontName;"  bold="&usebold;"/>
  </WidgetAttributes>


  <Layout>
    <Widget class="RowWidget" name="TitleRow">
      <Widget class="ScannerButton" name="ContextMenuTitle" colorScheme="ContextMenuTitle"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row1">
      <Widget class="ContextMenuIcon" name="ItemIcon1"/>
      <Widget class="ContextMenuText" name="ItemText1"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row2">
      <Widget class="ContextMenuIcon" name="ItemIcon2"/>
      <Widget class="ContextMenuText" name="ItemText2"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row3">
      <Widget class="ContextMenuIcon" name="ItemIcon3"/>
      <Widget class="ContextMenuText" name="ItemText3"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row4">
      <Widget class="ContextMenuIcon" name="ItemIcon4"/>
      <Widget class="ContextMenuText" name="ItemText4"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row5">
      <Widget class="ContextMenuIcon" name="ItemIcon5"/>
      <Widget class="ContextMenuText" name="ItemText5"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row6">
      <Widget class="ContextMenuIcon" name="ItemIcon6"/>
      <Widget class="ContextMenuText" name="ItemText6"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row7">
      <Widget class="ContextMenuIcon" name="ItemIcon7"/>
      <Widget class="ContextMenuText" name="ItemText7"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row8">
      <Widget class="ContextMenuIcon" name="ItemIcon8"/>
      <Widget class="ContextMenuText" name="ItemText8"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row9">
      <Widget class="ContextMenuIcon" name="ItemIcon9"/>
      <Widget class="ContextMenuText" name="ItemText9"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row10">
      <Widget class="ContextMenuIcon" name="ItemIcon10"/>
      <Widget class="ContextMenuText" name="ItemText10"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row11">
      <Widget class="ContextMenuIcon" name="ItemIcon11"/>
      <Widget class="ContextMenuText" name="ItemText11"/>
    </Widget>
  </Layout>

  <Animations>
    <Animation name="TopLevelRotation"
               start="true"
               onEnter=""
               firstPauseTime="@FirstPauseTime"
               autoStart="true"
               scanTime="@MenuDialogScanTime"
               iterations="@RowScanIterations">
      <Widget name="Row1" onSelect="actuate(ItemText1);transition(TopLevelRotation)"/>
      <Widget name="Row2" onSelect="actuate(ItemText2);select(ItemText2);transition(ButtonPressed)"/>
      <Widget name="Row3" onSelect="actuate(ItemText3);select(ItemText3);transition(ButtonPressed)"/>
      <Widget name="Row4" onSelect="actuate(ItemText4);transition(TopLevelRotation)"/>
      <Widget name="Row5" onSelect="actuate(ItemText5);transition(TopLevelRotation)"/>
      <Widget name="Row6" onSelect="actuate(ItemText6);transition(TopLevelRotation)"/>
      <Widget name="Row7" onSelect="actuate(ItemText7);transition(TopLevelRotation)"/>
      <Widget name="Row8" onSelect="actuate(ItemText8);transition(TopLevelRotation)"/>
      <Widget name="Row9" onSelect="actuate(ItemText9);transition(TopLevelRotation)"/>
      <Widget name="Row10" onSelect="actuate(ItemText10);transition(TopLevelRotation)"/>
      <Widget name="Row11" onSelect="actuate(ItemText11);transition(TopLevelRotation)"/>
    </Animation>

    <Animation name="ButtonPressed"
                onEnter=""
                iterations="1"
                onEnd="transition(TopLevelRotation)">
      <Widget name="@SelectedWidget" firstPauseTime="@FirstRepeatTime" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)" />
    </Animation>
  </Animations>
</ACAT>


