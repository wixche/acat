        <Widget class="TabStopScannerButton" name="Phrase7"/>
        <Widget class="TabStopScannerButton" name="Phrase8"/>

    </Widget>
      <Widget class="ScannerButton" name="PhraseMore" />
    
      <Widget class="BoxWidget"  name="KeyboardPanel">
        <Widget class="RowWidget" name="OptionsPanel">
          <Widget class="ScannerButton" name="OptionsButton1"/>
          <Widget class="ScannerButton" name="OptionsButton2"/>
          <Widget class="ScannerButton" name="OptionsButton3" enabled="contextual" defaultEnabled="true"/>
          <Widget class="ScannerButton" name="OptionsButton4" enabled="contextual" defaultEnabled="true"/>
          <Widget class="ScannerButton" name="OptionsButton5" enabled="contextual" defaultEnabled="true"/>
          <Widget class="ScannerButton" name="OptionsButton6" colorScheme="ColorCodedRegion1" disabledButtonColorScheme="DisabledColorCodedRegion1"/>
          <Widget class="ScannerButton" name="OptionsButton7"/>
        </Widget>

        <Widget class="RowWidget" name="Row1">
          <Widget class="ScannerButton" name="B1" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
