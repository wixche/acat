  <Animations>
    <Animation name="TopLevelRotation"
               start="true"
               iterations="@GridScanIterations">
      <Widget name="WordPredictionBox" onSelect="transition(WordListRotation)"/>
      <Widget name="PhraseList" onSelect="transition(PhraseListRotation)"/>
      <Widget name="KeyboardPanel"  onSelect="transition(RowRotationKeyboardBox)"/>
    </Animation>

    <Animation name="WordListRotation"
                   iterations="@WordPredictionScanIterations"
                   firstPauseTime="@WordPredictionFirstPauseTime"
                   onEnd="transition(TopLevelRotation)">
      <Widget name="PWLItem1" onSelect="actuate(PWLItem1);transition(TopLevelRotation)"/>
      <Widget name="PWLItem2" onSelect="actuate(PWLItem2);transition(TopLevelRotation)"/>
      <Widget name="PWLItem3" onSelect="actuate(PWLItem3);transition(TopLevelRotation)"/>
      <Widget name="PWLItem4" onSelect="actuate(PWLItem4);transition(TopLevelRotation)"/>
      <Widget name="PWLItem5" onSelect="actuate(PWLItem5);transition(TopLevelRotation)"/>
      <Widget name="PWLItem6" onSelect="actuate(PWLItem6);transition(TopLevelRotation)"/>
