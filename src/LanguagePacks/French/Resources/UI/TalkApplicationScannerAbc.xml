      <Widget name="B9"  onSelect="showPopup(LetterI, Lettre I)"/>
      <Widget name="B10"/>
      <Widget name="B11"/>
      <Widget name="B12"/>
      <Widget name="B13"/>
      <Widget name="B14"/>
