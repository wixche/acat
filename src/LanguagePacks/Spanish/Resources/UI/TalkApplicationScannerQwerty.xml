    <Widget class="WordListWidget" name="WordPredictionBox">
      <Widget class="WordListItemWidget" name="PWLItem1"/>
      <Widget class="WordListItemWidget" name="PWLItem2"/>
      <Widget class="WordListItemWidget" name="PWLItem3"/>
      <Widget class="WordListItemWidget" name="PWLItem4"/>
      <Widget class="WordListItemWidget" name="PWLItem5"/>
      <Widget class="WordListItemWidget" name="PWLItem6"/>
      <Widget class="WordListItemWidget" name="PWLItem7"/>
      <Widget class="WordListItemWidget" name="PWLItem8"/>
      <Widget class="WordListItemWidget" name="PWLItem9"/>
    </Widget>
  </Layout>

  <Animations>
    <Animation name="TopLevelRotation"
               start="true"
               iterations="@GridScanIterations">
      <Widget name="WordPredictionBox" onSelect="transition(WordListRotation)"/>
      <Widget name="KeyboardBoxLeft" onSelect="transition(RowRotationKeyboardBoxLeft)"/>
      <Widget name="KeyboardBoxRight" onSelect="transition(RowRotationKeyboardBoxRight)"/>
    </Animation>

    <Animation name="TopLevelRotation1"
             start="true"
             iterations="@GridScanIterations">
      <Widget name="KeyboardBoxLeft" onSelect="transition(RowRotationKeyboardBoxLeft)"/>
      <Widget name="KeyboardBoxRight" onSelect="transition(RowRotationKeyboardBoxRight)"/>
      <Widget name="WordPredictionBox" onSelect="transition(WordListRotation)"/>
    </Animation>
    
    <Animation name="RowRotationKeyboardBoxLeft"
               iterations="@RowScanIterations"
               firstPauseTime="@FirstPauseTime"
               onEnd="transition(TopLevelRotation)">
      <Widget name="RowL1" onSelect="transition(ButtonRotationRowL1)"/>
      <Widget name="RowL2" onSelect="transition(ButtonRotationRowL2)"/>
      <Widget name="RowL3" onSelect="transition(ButtonRotationRowL3)"/>
      <Widget name="RowL4" onSelect="transition(ButtonRotationRowL4)"/>
    </Animation>

    <Animation name="RowRotationKeyboardBoxRight"
                   iterations="@RowScanIterations"
                   firstPauseTime="@FirstPauseTime"
                   onEnd="transition(TopLevelRotation)">
      <Widget name="RowR1" onSelect="transition(ButtonRotationRowR1)"/>
      <Widget name="RowR2" onSelect="transition(ButtonRotationRowR2)"/>
      <Widget name="RowR3" onSelect="transition(ButtonRotationRowR3)"/>
      <Widget name="RowR4" onSelect="transition(ButtonRotationRowR4)"/>
    </Animation>

    <Animation name="WordListRotation"
                   iterations="@WordPredictionScanIterations"
                   firstPauseTime="@WordPredictionFirstPauseTime"
                   onEnd="transition(TopLevelRotation)">
      <Widget name="PWLItem1" onSelect="actuate(PWLItem1);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem2" onSelect="actuate(PWLItem2);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem3" onSelect="actuate(PWLItem3);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem4" onSelect="actuate(PWLItem4);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem5" onSelect="actuate(PWLItem5);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem6" onSelect="actuate(PWLItem6);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem7" onSelect="actuate(PWLItem7);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem8" onSelect="actuate(PWLItem8);transition(TopLevelRotation1)"/>
      <Widget name="PWLItem9" onSelect="actuate(PWLItem9);transition(TopLevelRotation1)"/>
    </Animation>


    <Animation name="ButtonRotationRowL1"
                      iterations="@ColumnScanIterations"
                      onEnd="transition(TopLevelRotation)"
                      firstPauseTime="@FirstPauseTime"
                      onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B1"/>
      <Widget name="B2"/>
      <Widget name="B3" onSelect="showPopup(LetterE, Letra E)"/>
      <Widget name="B4"/>
      <Widget name="B5"/>
    </Animation>

    <Animation name="ButtonRotationRowL2"
                  iterations="@ColumnScanIterations"
                  onEnd="transition(TopLevelRotation)"
                  firstPauseTime="@FirstPauseTime"
                  onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B7"/>
      <Widget name="B8"  onSelect="showPopup(LetterA, Letra A)"/>
      <Widget name="B9"/>
      <Widget name="B10"/>
      <Widget name="B11"/>
    </Animation>

    <Animation name="ButtonRotationRowL3"
                  iterations="@ColumnScanIterations"
                  onEnd="transition(TopLevelRotation)"
                  firstPauseTime="@FirstPauseTime"
                  onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B13"/>
      <Widget name="B14"/>
      <Widget name="B15"/>
      <Widget name="B16"/>
      <Widget name="B17"/>
    </Animation>

    <Animation name="ButtonRotationRowL4"
                  iterations="@ColumnScanIterations"
                  onEnd="transition(TopLevelRotation)"
                  firstPauseTime="@FirstPauseTime"
                  onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B19"/>
      <Widget name="B20"  onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B21" onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B22"/>
      <Widget name="B23"/>
    </Animation>

    <Animation name="ButtonRotationRowR1"
                  iterations="@ColumnScanIterations"
                  onEnd="transition(TopLevelRotation)"
                  firstPauseTime="@FirstPauseTime"
                  onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B31"/>
      <Widget name="B32"  onSelect="showPopup(LetterU, Letra U)"/>
      <Widget name="B33"  onSelect="showPopup(LetterI, Letra I)"/>
      <Widget name="B34"  onSelect="showPopup(LetterO, Letra O)"/>
      <Widget name="B35"/>
    </Animation>

    <Animation name="ButtonRotationRowR2"
                  iterations="@ColumnScanIterations"
                  onEnd="transition(TopLevelRotation)"
                  firstPauseTime="@FirstPauseTime"
                  onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B37"/>
      <Widget name="B38"/>
      <Widget name="B39"/>
      <Widget name="B40"/>
      <Widget name="B41"/>
    </Animation>

    <Animation name="ButtonRotationRowR3"
                      iterations="@ColumnScanIterations"
                      onEnd="transition(TopLevelRotation)"
                      firstPauseTime="@FirstPauseTime"
                      onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B43"/>
      <Widget name="B44"/>
      <Widget name="B45"   onSelect="showPopup(LetterN, Letra N)"/>
      <Widget name="B46"/>
      <Widget name="B47"/>
    </Animation>

    <Animation name="ButtonRotationRowR4"
                      iterations="@ColumnScanIterations"
                      onEnd="transition(TopLevelRotation)"
                      firstPauseTime="@FirstPauseTime"
                      onSelect="actuate(@SelectedWidget); transition(TopLevelRotation)">
      <Widget name="B49" onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B50" onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B51"  onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B52"  onSelect="actuate(@SelectedWidget); transition(ButtonPressed)"/>
      <Widget name="B53"/>
    </Animation>

    <Animation name="ButtonPressed"
       onEnter=""
       iterations="1"
       onEnd="transition(TopLevelRotation)">
      <Widget name="@SelectedWidget" firstPauseTime="@FirstRepeatTime" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)" />
    </Animation>
  </Animations>
</ACAT>

