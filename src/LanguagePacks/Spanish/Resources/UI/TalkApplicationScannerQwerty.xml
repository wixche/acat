        <Widget class="ScannerButton" name="B19" enabled="contextual" defaultEnabled="true"/>
        <Widget class="ScannerButton" name="B20" enabled="contextual" defaultEnabled="true"/>
        <Widget class="ScannerButton" name="B21" enabled="contextual" defaultEnabled="true"/>
        <Widget class="ScannerButton" name="B22" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
        <Widget class="ScannerButton" name="B23" colorScheme="ColorCodedRegion1"  disabledButtonColorScheme="DisabledColorCodedRegion1"/>
      </Widget>
    </Widget>

    <Widget class="BoxWidget"  name="KeyboardBoxRight">
      <Widget class="RowWidget" name="RowR1">
        <Widget class="ScannerButton" name="B31" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
        <Widget class="ScannerButton" name="B32" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
        <Widget class="ScannerButton" name="B33" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
        <Widget class="ScannerButton" name="B34" colorScheme="ColorCodedRegion2"  disabledButtonColorScheme="DisabledColorCodedRegion2"/>
